{
  "name": "wili-frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "generate:users-api": "openapi-typescript ../backend/services/user/openapi.yaml -o src/lib/api/generated/users-api.ts",
    "generate:wishlist-api": "openapi-typescript ../backend/services/wishlist/openapi.yaml -o src/lib/api/generated/wishlist-api.ts",
    "generate:validation-constants": "node scripts/generate-validation-constants.js",
    "generate:api": "npm run generate:users-api && npm run generate:wishlist-api && npm run generate:validation-constants",
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "test": "npm run check"
  },
  "devDependencies": {
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.515.0",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-svelte": "^2.35.1",
    "svelte-check": "^4.0.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.19.9",
    "autoprefixer": "^10.4.21",
    "bits-ui": "^2.9.1",
    "clsx": "^2.1.1",
    "js-yaml": "^4.1.0",
    "openapi-typescript": "^6.7.6",
    "postcss": "^8.5.6",
    "svelte": "^5.37.3",
    "svelte-preprocess": "^5.1.4",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "@sveltejs/kit": "^2.27.0",
    "@tailwindcss/vite": "^4.1.11",
    "marked": "^16.1.2",
    "mode-watcher": "^1.1.0",
    "shadcn-svelte": "^0.9.4",
    "svelte-i18n": "^4.0.1"
  }
}
